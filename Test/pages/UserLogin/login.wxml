<!--pages/user/登录.wxml-->
<view class="v1">
 
<!-- v2父容器  子view使用绝对布局 -->
  <view class="v2">
    <view class="dltext">登录</view>
 
    <!-- 手机号 -->
    <view class="phoneCs" style="position: absolute; left: 0rpx; top: 77rpx">
      <image src="/img/user.png" class="ph"></image>
      <input model:value="{{phNum}}" style="position: relative; left: 27rpx; top: 10rpx; width: 200rpx; height: 55rpx; display: block; box-sizing: border-box"  placeholder="请输入账号" />
    </view>
    
 
    <!-- 密码 -->
    <view class=passwordCs">
      <image src="/img/password.png" class="ps"></image>
      <input type="{{pwTyp}}" model:value="{{pswd}}" style="width: 200rpx; height: 55rpx; display: block; box-sizing: border-box" placeholder="请输入密码" clearable />
      <button bindtap="btneye" class="btn" style="width: 54rpx; height: 54rpx; display: block; box-sizing: border-box; left: 18rpx; top: 0rpx; position: relative"><image class="eye" src="{{eyeTp}}" style="position: relative; left: -64rpx; top: -4rpx"></image></button>
      <button bindtap="btncler" class="btn" style="width: 54rpx; height: 54rpx; display: block; box-sizing: border-box; left: 6rpx; top: 0rpx; position: relative"><image class="eye" src="/img/clear.png" style="position: relative; left: -64rpx; top: -4rpx"></image></button>


    </view>
 
    <!-- 注册 和忘记密码  -->
    <!-- <view class="zhuce">
      <navigator>立即注册</navigator>
      <navigator>忘记密码?</navigator>
    </view> -->
 
    <!-- 登录按钮 -->
    <view class="denglu">
      <button bindtap="btnTapHandler" class="btn-dl" type="primary" style="width: 350rpx; height: 60rpx; display: block; box-sizing: border-box; left: 0rpx; top: -8rpx; position: relative">登录</button>
    </view>
 
    <!-- 协议区  xieyi -->
    <!-- <view class="xieyi">
      <checkbox class="isXY"></checkbox>
      <view class="text-xy">同意小程序的《使用协议》</view>
    </view> -->
  </view>

